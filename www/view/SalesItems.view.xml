<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName="mortgage.pawnshop.controller.SalesItems">
    <Page navButtonPress="back">
        <content>
            <List growing="true" growingScrollToLoad="true" growingThreshold="5"
                  mode="SingleSelectMaster" itemPress="" inset="{= !${device>/support/touch}}" items="{sales>/}">
                <headerToolbar>
                    <Toolbar>
                        <content>
                            <Title text="{i18n>salesItems}"/>
                            <ToolbarSpacer/>
                            <Button text="{i18n>create_salesItem}" press="onCreateSalesPressed" icon="sap-icon://add"/>
                        </content>
                    </Toolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem iconDensityAware="true" icon="{sales>saleItem/picUrl}"
                                    title="{sales>saleItem/itemName}"
                                    numberUnit="VND"

                                    numberState="Information"
                                    number="{
                    parts: [
                    {path: 'sales>saleItem/price'},
                    {path: 'global>/currencyCode'}
                    ],
                    type: 'sap.ui.model.type.Currency',
                    formatOptions: {
                    showMeasure: false
                    }}">
                        <attributes>
                            <ObjectAttribute title="{i18n>liquidationDate}"
                                             text="{ path : 'sales>saleItem/liquidationDate',
                    type: 'sap.ui.model.type.Date',
                    formatOptions: {
                    source: {
                    pattern: 'yyyy-MM-ddTHH:mm:ss.sss+hhmm'
                    },
                    pattern: 'dd-MM-yyyy'
                    }
                    }"/>
                        </attributes>
                    </ObjectListItem>
                    <!--<ObjectListItem title="{sales>itemName}" numberUnit="VND"-->
                    <!--numberState="Success"-->
                    <!--number="{sales>price}">-->
                    <!--<attributes>-->
                    <!--<ObjectAttribute title="{i18n>liquidateAfter}"-->
                    <!--text="{ path : 'sales>liquidationDate',-->
                    <!--type: 'sap.ui.model.type.Date',-->
                    <!--formatOptions: {-->
                    <!--source: {-->
                    <!--pattern: 'yyyy-MM-ddTHH:mm:ss.sss+hhmm'-->
                    <!--},-->
                    <!--pattern: 'dd-MM-yyyy'-->
                    <!--}-->
                    <!--}"/>-->
                    <!--</attributes>-->
                    <!--</ObjectListItem>-->
                </items>
            </List>
        </content>
    </Page>
</mvc:View>