<mvc:View
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:unified="sap.ui.unified"
        xmlns:html="http://www.w3.org/1999/xhtml"
        controllerName="mortgage.pawnshop.controller.SalesItems">
    <Page navButtonPress="back">
        <content>
            <List mode="SingleSelectMaster" itemPress="" inset="{= !${device>/support/touch}}" items="{sales>/}">
                <headerToolbar>
                    <Toolbar>
                        <content>
                            <Title text="{i18n>salesItems}"/>
                            <ToolbarSpacer/>
                            <Button text="{i18n>create_salesItem}" press="onCreateSalesPressed" icon="sap-icon://add"/>
                        </content>
                    </Toolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem iconDensityAware="true" icon="{sales>picUrl}" title="{sales>itemName}"
                                    numberUnit="VND"
                                    
                                    numberState="Success"
                                    number="{
                    parts: [
                    {path: 'sales>price'},
                    {path: 'global>/currencyCode'}
                    ],
                    type: 'sap.ui.model.type.Currency',
                    formatOptions: {
                    showMeasure: false
                    }}">
                        <attributes>
                            <ObjectAttribute title="{i18n>liquidateAfter}"
                                             text="{ path : 'sales>liquidationDate',
                    type: 'sap.ui.model.type.Date',
                    formatOptions: {
                    source: {
                    pattern: 'yyyy-MM-ddTHH:mm:ss.sss+hhmm'
                    },
                    pattern: 'dd-MM-yyyy'
                    }
                    }"/>
                        </attributes>
                    </ObjectListItem>
                    <!--<ObjectListItem title="{sales>itemName}" numberUnit="VND"-->
                    <!--numberState="Success"-->
                    <!--number="{sales>price}">-->
                    <!--<attributes>-->
                    <!--<ObjectAttribute title="{i18n>liquidateAfter}"-->
                    <!--text="{ path : 'sales>liquidationDate',-->
                    <!--type: 'sap.ui.model.type.Date',-->
                    <!--formatOptions: {-->
                    <!--source: {-->
                    <!--pattern: 'yyyy-MM-ddTHH:mm:ss.sss+hhmm'-->
                    <!--},-->
                    <!--pattern: 'dd-MM-yyyy'-->
                    <!--}-->
                    <!--}"/>-->
                    <!--</attributes>-->
                    <!--</ObjectListItem>-->
                </items>
            </List>
        </content>
    </Page>
</mvc:View>