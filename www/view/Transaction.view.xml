<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName="mortgage.pawnshop.controller.Transaction">
    <Page showHeader="false">
        <!--<Button text="{i18n>btn_register_pawnshop}" press="onRegister"/>-->
        <Table alternateRowColors="true" inset="{= !${device>/system/phone}}" items="{trans>/}">
            <headerToolbar>
                <Toolbar>
                    <content>
                        <Title level="H2" text="{i18n>title_transaction}"/>
                        <ToolbarSpacer/>
                        <Button icon="sap-icon://add" text="{i18n>btn_create_transaction}" press="onCreateTransaction"/>
                    </content>
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column width="3rem" minScreenWidth="tablet">
                    <Label wrapping="true" wrappingType="Hyphenated" text="{i18n>bl_tranid}"/>
                </Column>
                <Column>
                    <Label wrapping="true" wrappingType="Hyphenated" text="{i18n>pawnee_name}"/>
                </Column>
                <Column minScreenWidth="Tablet" popinDisplay="Inline" demandPopin="true" popinHAlign="Begin">
                    <Label text="{i18n>item}"/>
                </Column>
                <Column minScreenWidth="Tablet" popinDisplay="Inline" demandPopin="true" popinHAlign="Begin">
                    <Label text="{i18n>item_cat}"/>
                </Column>
                <Column hAlign="Right" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
                        popinHAlign="End">
                    <Label text="{i18n>date}"/>
                </Column>
                <Column hAlign="Right">
                    <Label wrapping="true" textAlign="End" wrappingType="Normal" text="{i18n>next_date}"/>
                </Column>
                <Column width="5rem">
                    <Label wrapping="true" wrappingType="Hyphenated" text="{i18n>status}"/>
                </Column>

            </columns>
            <items>
                <ColumnListItem press="onTransDetailPress" type="Active">
                    <cells>
                        <Text text="{trans>id}"/>
                        <Text text="{trans>pawnee_name}"/>
                        <Text text="{trans>item}"/>
                        <Text text="{trans>item_cat/catDesc}"/>
                        <Text text="{trans>date}"/>
                        <Text text="{trans>next_date}"/>
                        <ObjectStatus
                                text="{trans>status/description}"
                                state="{
							path: 'trans>status/id',
							formatter: '.formatter.transStatus'
						}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>