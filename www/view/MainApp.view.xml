<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:tnt="sap.tnt" xmlns="sap.m"
          controllerName="mortgage.pawnshop.controller.MainApp">
    <tnt:ToolPage id="_pageCustomer">
        <tnt:header>
            <tnt:ToolHeader>
                <Button press="showMenu" type="Transparent" icon="sap-icon://menu2">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow"/>
                    </layoutData>
                </Button>
                <ToolbarSpacer/>
                <core:Icon id="_iconMain" src="{globalProperties>/appTitleIcon}">
                </core:Icon>
                <Title id="_titleMain" text="{globalProperties>/appTitle}" wrapping="false">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="Disappear"/>
                    </layoutData>
                </Title>
                <!--<ToolbarSpacer/>-->
                <!--<Button press="__toViewCart"-->
                <!--text="{CartProperties>/TotalQuantity}"-->
                <!--type="Transparent"-->
                <!--icon="sap-icon://cart-3">-->
                <!--<layoutData>-->
                <!--<OverflowToolbarLayoutData priority="NeverOverflow"/>-->
                <!--</layoutData>-->
                <!--</Button>-->
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation expanded="true" id="sideNavigation">
                <tnt:item>
                    <tnt:NavigationList>
                        <tnt:NavigationListItem
                                icon="sap-icon://home"
                                id="navToHome"
                                select="navToHome"
                                text="{i18n>navTransaction}"/>
                        <tnt:NavigationListItem
                                icon="sap-icon://customer"
                                id="navCustomer"
                                select="navShopConfig"
                                text="{i18n>navShopConfig}"/>
                        <tnt:NavigationListItem
                                icon="sap-icon://loan"
                                id="navSaleIncomeMaster"
                                select="navSaleIncomeMaster"
                                text="{i18n>navSaleIncome}"/>
                    </tnt:NavigationList>
                </tnt:item>

                <tnt:fixedItem>
                    <tnt:NavigationList>
                        <tnt:NavigationListItem select="" enabled="false"
                                                text="{globalProperties>/name}"
                                                icon="sap-icon://employee"/>
                        <tnt:NavigationListItem select="" enabled="false"
                                                text="{globalProperties>/SiteDesc}"
                                                icon="sap-icon://building"/>
                        <tnt:NavigationListItem select="onUpdateAppPressed"
                                                text="{i18n>LBL_UPDATE_APP}"
                                                icon="sap-icon://download-from-cloud"/>
                        <tnt:NavigationListItem select="changePasswordPress"
                                                text="{i18n>navChangePass}"
                                                icon="sap-icon://user-edit"/>
                        <tnt:NavigationListItem select="logout"
                                                text="{i18n>logout}"
                                                icon="sap-icon://log"/>
                    </tnt:NavigationList>
                </tnt:fixedItem>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <App id="mainApp"/>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>