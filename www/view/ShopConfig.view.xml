<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        controllerName="mortgage.pawnshop.controller.ShopConfig">
    <Page showHeader="false">
        <!--<Button text="{i18n>btn_register_pawnshop}" press="onRegister"/>-->
        <Panel headerText="{i18n>cate_config}" width="100%">
            <content>
                <PullToRefresh visible="{device>/system/phone}" refresh="onRefresh"/>
                <Table fixedLayout="false" alternateRowColors="true" inset="{= !${device>/system/phone}}"
                       items="{shopConfig>/}">
                    <headerToolbar>
                        <OverflowToolbar>
                            <content>
                                <ToolbarSpacer/>
                                <Label text="{i18n>status}:"/>
                                <Select change="onFilterByStatus" selectedKey="1">
                                    <items>
                                        <core:Item key="0" text="{i18n>status_all}"/>
                                        <core:Item key="1" text="{i18n>status_active}"/>
                                        <core:Item key="2" text="{i18n>status_locked}"/>
                                    </items>
                                </Select>
                                <ToolbarSeparator/>
                                <Button icon="sap-icon://add"
                                        text="{= ${device>/system/phone} ? '' : ${i18n>btn_create_cate_config} }"
                                        press="onCreateConfigPressed"/>
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Label wrapping="true" wrappingType="Hyphenated" text="{i18n>category_name}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" popinDisplay="Inline" demandPopin="true" popinHAlign="Begin">
                            <Label text="{i18n>name}"/>
                        </Column>
                        <Column hAlign="Right" minScreenWidth="Tablet" popinDisplay="Inline" demandPopin="true"
                                popinHAlign="Begin">
                            <Label text="{i18n>paymentTerm}"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
                                popinHAlign="End">
                            <Label text="{i18n>paymentType}"/>
                        </Column>
                        <Column>
                            <Label wrapping="true" textAlign="End" wrappingType="Normal" text="{i18n>liquidateAfter}"/>
                        </Column>
                        <Column>
                            <Label wrapping="true" wrappingType="Hyphenated" text="{i18n>status}"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem press="onTransDetailPress" type="Active">
                            <cells>
                                <Title level="H1" text="{shopConfig>cat/categoryName}"/>
                                <Text text="{shopConfig>name}"/>
                                <Text text="{shopConfig>paymentTerm}"/>
                                <Text text="{ path: 'shopConfig>paymentType', formatter: '.formatter.paymentType' }"/>
                                <Text text="{ path:'shopConfig>liquidateAfter', formatter: '.formatter.liquidateAfter'}"/>
                                <ObjectStatus
                                        text="{= ${shopConfig>status} === 1 ? ${i18n>status_active} : ${i18n>status_locked} }"
                                        state="{= ${shopConfig>status} === 1 ? 'Success' : 'None' }"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </content>
        </Panel>
        <Panel headerText="{i18n>POLICY}" width="100%" height="20rem">

            <content>
                <VBox>
                    <items>
                        <TextArea width="90%"/>
                        <Button text="{i18n>update}"/>
                    </items>
                </VBox>

            </content>
        </Panel>
    </Page>
</mvc:View>