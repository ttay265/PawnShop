<mvc:View
        xmlns:f="sap.ui.layout.form"
        xmlns:m="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc"
        controllerName="mortgage.pawnshop.controller.ShopConfig"
        xmlns="sap.uxap">
    <m:Page showHeader="{device>/system/phone}"
            showNavButton="{device>/system/phone}"
            navButtonPress=".onNavButtonPress">
        <ObjectPageLayout id="objectPageLayout">
            <headerTitle>
                <ObjectPageHeader
                        objectTitle="{i18n>systemSettingsTitle}"
                        objectSubtitle="{i18n>systemSettingsDescriptionTitle}">
                    <actions>
                        <ObjectPageHeaderActionButton
                                id="save"
                                text="{i18n>save}"
                                hideText="false"
                                press="onSavePressed"
                                visible="{shopConfig>/isEditing}"
                                type="Emphasized"/>
                        <ObjectPageHeaderActionButton
                                id="cancel"
                                text="{i18n>cancel}"
                                visible="{shopConfig>/isEditing}"
                                press="onCancelPressed"
                                hideText="false"/>
                        <ObjectPageHeaderActionButton
                                id="edit"
                                visible="{= ${account>/user/status} === 1 &amp;&amp; !${shopConfig>/isEditing} }"
                                enabled="{= ${account>/shop/status} === 2 }"
                                text="{i18n>edit}"
                                press="onEditPressed"
                                type="Emphasized"
                                hideText="false"/>
                    </actions>
                </ObjectPageHeader>
            </headerTitle>
            <sections>
                <ObjectPageSection>
                    <subSections>
                        <ObjectPageSubSection>
                            <blocks>
                                <ObjectPageLazyLoader
                                        id="shopOwnerLazyLoader">
                                    <f:SimpleForm
                                            columnsL="2"
                                            columnsM="2"
                                            editable="true"
                                            layout="ResponsiveGridLayout">
                                        <f:content>
                                            <m:Label
                                                    text="{i18n>shopName}"
                                                    labelFor="firstNameInput"/>
                                            <m:Input editable="{shopConfig>/isEditing}"
                                                     id="firstNameInput"
                                                     type="Text"
                                                     width="100%"
                                                     value="{shopConfig>/shop/shopName}"/>
                                            <m:Label
                                                    labelFor="emailInput"
                                                    text="{i18n>email}"/>
                                            <m:Input editable="{shopConfig>/isEditing}"
                                                     id="emailInput"
                                                     type="Text"
                                                     width="100%"
                                                     value="{shopConfig>/shop/email}"/>
                                            <m:Label
                                                    labelFor="facebookInput"
                                                    text="{i18n>facebook}"/>
                                            <m:Input editable="{shopConfig>/isEditing}"
                                                     id="facebookInput"
                                                     type="Text"
                                                     width="100%"
                                                     value="{shopConfig>/shop/facebook}"/>
                                            <m:Label
                                                    labelFor="phoneNumberInput"
                                                    text="{i18n>phoneNumber}"/>
                                            <m:Input editable="{shopConfig>/isEditing}"
                                                     id="phoneNumberInput"
                                                     type="Text"
                                                     width="100%"
                                                     value="{shopConfig>/shop/phoneNumber}"/>
                                            <m:Label
                                                    labelFor="addressCountryInput"
                                                    text="{i18n>address}"/>
                                            <m:Select enabled="{shopConfig>/isEditing}" id="selectCity" selectedKey="{path:'shopConfig>/cityId',
                                                                                    type:'sap.ui.model.type.Integer' }"
                                                      items="{city>/}" change="onCityChanged">
                                                <m:items>
                                                    <core:Item key="{city>id}" text="{city>cityName}"/>
                                                </m:items>
                                            </m:Select>
                                            <m:Select selectedKey="{shopConfig>/shop/address/districtId}"
                                                      change="onDistrictChanged" enabled="{shopConfig>/isEditing}"
                                                      items="{district>/}">
                                                <m:items>
                                                    <core:Item key="{district>id}" text="{district>districtName}"/>
                                                </m:items>
                                            </m:Select>
                                            <m:Label
                                                    labelFor="ip_address"
                                                    text=""/>
                                            <m:Input editable="{shopConfig>/isEditing}" id="ip_address"
                                                     value="{shopConfig>/shop/fullAddress}"
                                                     change="getLocationFromInput" type="Text"
                                                     placeholder="{i18n>input_register_address}"/>
                                        </f:content>
                                    </f:SimpleForm>
                                </ObjectPageLazyLoader>
                            </blocks>
                        </ObjectPageSubSection>
                        <ObjectPageSubSection>
                            <blocks>
                                <ObjectPageLazyLoader>
                                    <m:VBox width="100%" height="50rem">
                                        <m:HBox id="map_canvas" fitContainer="true" justifyContent="Center"
                                                alignItems="Center"
                                                class="custom-map-register"></m:HBox>
                                    </m:VBox>
                                </ObjectPageLazyLoader>
                            </blocks>
                        </ObjectPageSubSection>
                        <ObjectPageSubSection>
                            <blocks>
                                <ObjectPageLazyLoader>
                                   <f:SimpleForm>
                                       <m:Label text="{i18n>policay}"/>
                                       <m:
                                   </f:SimpleForm>
                                </ObjectPageLazyLoader>
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
            </sections>
        </ObjectPageLayout>
    </m:Page>
</mvc:View>