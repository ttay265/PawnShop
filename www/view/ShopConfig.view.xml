<mvc:View
        xmlns:f="sap.ui.layout.form"
        xmlns:m="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc"
        controllerName="mortgage.pawnshop.controller.ShopConfig"
        xmlns="sap.uxap">
    <m:Page
            showHeader="{device>/system/phone}"
            showNavButton="{device>/system/phone}"
            navButtonPress=".onNavButtonPress">

        <ObjectPageLayout id="objectPageLayout">
            <headerTitle>
                <ObjectPageHeader
                        objectTitle="{i18n>systemSettingsTitle}"
                        objectSubtitle="{i18n>systemSettingsDescriptionTitle}">
                    <actions>
                        <ObjectPageHeaderActionButton

                                id="save"
                                text="{i18n>save}"
                                hideText="false"
                                press=".onSavePressed"
                                visible="{shopConfig>/isEditing}"
                                type="Emphasized"/>
                        <ObjectPageHeaderActionButton
                                id="cancel"
                                text="{i18n>cancel}"
                                visible="{shopConfig>/isEditing}"
                                press=".onCancelPressed"
                                hideText="false"/>
                        <ObjectPageHeaderActionButton
                                id="edit"
                                visible="{= !${shopConfig>/isEditing} }"
                                enabled="{= ${account>/shop/status} === 2 }"
                                text="{i18n>edit}"
                                press=".onEditPressed"
                                type="Emphasized"
                                hideText="false"/>
                    </actions>
                </ObjectPageHeader>
            </headerTitle>
            <!--<headerContent>-->
            <!--<m:MessageStrip-->
            <!--text="{-->
            <!--parts: [-->
            <!--'i18n>systemSettingsLastLoginTitle',-->
            <!--'view>/currentUser',-->
            <!--'view>/lastLogin'-->
            <!--],-->
            <!--formatter: '.formatter.formatMessage'-->
            <!--}"-->
            <!--type="Information"-->
            <!--showIcon="true">-->
            <!--</m:MessageStrip>-->
            <!--</headerContent>-->
            <sections>
                <ObjectPageSection>
                    <subSections>
                        <ObjectPageSubSection>
                            <blocks>
                                <ObjectPageLazyLoader
                                        id="shopOwnerLazyLoader">
                                    <f:SimpleForm
                                            columnsL="2"
                                            columnsM="2"
                                            editable="true"
                                            layout="ResponsiveGridLayout">
                                        <f:content>
                                            <m:Label
                                                    text="{i18n>shopName}"
                                                    labelFor="firstNameInput"/>
                                            <m:Input editable="{shopConfig>/allowUpdate}"
                                                     id="firstNameInput"
                                                     type="Text"
                                                     width="100%"
                                                     value="{account>/shop/shopName}"/>
                                            <m:Label
                                                    labelFor="emailInput"
                                                    text="{i18n>email}"/>
                                            <m:Input
                                                    id="emailInput"
                                                    type="Text"
                                                    width="100%"
                                                    value="{account>/shop/email}"/>
                                            <m:Label
                                                    labelFor="facebookInput"
                                                    text="{i18n>facebook}"/>
                                            <m:Input
                                                    id="facebookInput"
                                                    type="Text"
                                                    width="100%"
                                                    value="{account>/shop/facebook}"/>
                                            <m:Label
                                                    labelFor="phoneNumberInput"
                                                    text="{i18n>phoneNumber}"/>
                                            <m:Input
                                                    id="phoneNumberInput"
                                                    type="Text"
                                                    width="100%"
                                                    value="{account>/shop/phoneNumber}"/>
                                            <m:Label
                                                    labelFor="addressCountryInput"
                                                    text="{i18n>ownerCountry}"/>
                                            <m:Select items="{city>/}" change="onCityChange">
                                                <m:items>
                                                    <core:Item key="{city>id}" text="{city>cityName}"/>
                                                </m:items>
                                            </m:Select>
                                            <m:Select items="{district>/}">
                                                <m:items>
                                                    <core:Item key="{district>id}" text="{district>districtName}"/>
                                                </m:items>
                                            </m:Select>
                                            <m:Input
                                                    id="addressCountryInput"
                                                    type="Text"
                                                    width="100%"
                                                    value="England"/>
                                            <core:Title text="{i18n>ownerContact}"/>

                                        </f:content>
                                    </f:SimpleForm>
                                </ObjectPageLazyLoader>
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
            </sections>
        </ObjectPageLayout>
    </m:Page>
</mvc:View>