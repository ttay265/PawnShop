<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:l="sap.ui.layout"
        xmlns:f="sap.ui.layout.form"
        xmlns:core="sap.ui.core"
        xmlns="sap.m"
        controllerName="mortgage.pawnshop.controller.CreateTransaction">
    <Page floatingFooter="true" showNavButton="{device>/system/phone}" navButtonPress="back">
        <content>
            <f:Form editable="true">
                <f:title>
                    <core:Title text="{i18n>CT_FORM_CREATE_TRANSACTION}"/>
                </f:title>
                <f:layout>
                    <f:ResponsiveGridLayout
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="4"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="1"
                            emptySpanL="1"
                            emptySpanM="1"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="2"
                            columnsS="1"
                            singleContainerFullSize="false"/>
                </f:layout>
                <f:formContainers>
                    <f:FormContainer title="">
                        <f:toolbar>
                            <Toolbar>
                                <Title text="{i18n>CT_PAWNEE}" />
                                <ToolbarSpacer />
                                <Button text="{i18n>check_pawnee}" icon="sap-icon://drop-down-list" />
                            </Toolbar>
                        </f:toolbar>
                        <f:formElements>
                            <f:FormElement>
                                <f:label>
                                    <Label required="true" text="{i18n>NAME}"/>
                                </f:label>
                                <f:fields>
                                    <Input/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:label>
                                    <Label required="false" text="{i18n>IDNO}"/>
                                </f:label>
                                <f:fields>
                                    <Input/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:label>
                                    <Label required="false" text="{i18n>ID_DATE_PLACE}"/>
                                </f:label>
                                <f:fields>
                                    <DatePicker displayFormat="dd/MM/yyyy" placeholder="{i18n>ID_DATE}">
                                        <layoutData>
                                            <l:GridData span="XL3 L4 M7 S6"/>
                                        </layoutData>
                                    </DatePicker>
                                    <Input placeholder="{i18n>ID_PLACE}">
                                        <layoutData>
                                            <l:GridData indentM="4" span="XL5 L4 M7 S6"/>
                                        </layoutData>
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:label>
                                    <Label required="false" text="{i18n>PHONE_NO}"/>
                                </f:label>
                                <f:fields>
                                    <Input/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:label>
                                    <Label required="false" text="{i18n>ADDRESS}"/>
                                </f:label>
                                <f:fields>
                                    <ComboBox placeholder="{i18n>CITY}">
                                        <layoutData>
                                            <l:GridData span="XL4 L4 M7 S6"/>
                                        </layoutData>
                                    </ComboBox>
                                    <ComboBox placeholder="{i18n>DISTRICT}">
                                        <layoutData>
                                            <l:GridData indentM="4" span="XL4 L4 M7 S6"/>
                                        </layoutData>
                                    </ComboBox>
                                    <Input placeholder="{i18n>STREET_NAME}">
                                        <layoutData>
                                            <l:GridData indentXL="4"
                                                        indentL="3"
                                                        indentM="4" span="XL8 L8 M7 S12"/>
                                        </layoutData>
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer title="{i18n>CT_ITEM}">
                        <f:formElements>
                            <f:FormElement>
                                <f:label>
                                    <Label required="false" text="{i18n>ITEM}"/>
                                </f:label>
                                <f:fields>
                                    <ComboBox placeholder="{i18n>ITEM_TYPE}">
                                        <layoutData>
                                            <l:GridData span="XL3 L3 M7 S6"/>
                                        </layoutData>
                                    </ComboBox>
                                    <Input placeholder="{i18n>ITEM_NAME}">
                                        <layoutData>
                                            <l:GridData indentM="4" span="XL5 L5 M7 S6"/>
                                        </layoutData>
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:label>
                                    <Label required="false" text="{i18n>ATTRIBUTE_1}"/>
                                </f:label>
                                <f:fields>
                                    <Input placeholder="{i18n>ATTRIBUTE_1_DESC}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:label>
                                    <Label required="false" text="{i18n>ATTRIBUTE_2}"/>
                                </f:label>
                                <f:fields>
                                    <Input placeholder="{i18n>ATTRIBUTE_2_DESC}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:label>
                                    <Label required="false" text="{i18n>ATTRIBUTE_3}"/>
                                </f:label>
                                <f:fields>
                                    <Input placeholder="{i18n>ATTRIBUTE_3_DESC}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:label>
                                    <Label required="false" text="{i18n>ATTRIBUTE_4}"/>
                                </f:label>
                                <f:fields>
                                    <Input placeholder="{i18n>ATTRIBUTE_4_DESC}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer title="{i18n>PAYMENT_TERM}">
                        <f:formElements>
                            <f:FormElement label="{i18n>PERIOD}">
                                <f:fields>
                                    <Input textAlign="End" type="Number">
                                        <layoutData>
                                            <l:GridData span="XL3 L3 M2 S6"/>
                                        </layoutData>
                                    </Input>
                                    <ComboBox placeholder="{i18n>PERIOD_UNIT}">
                                        <layoutData>
                                            <l:GridData span="XL5 L5 M5 S6"/>
                                        </layoutData>
                                        <items>
                                            <core:Item key="1" text="{i18n>PERIOD_UNIT_DATE}"/>
                                            <core:Item key="1" text="{i18n>PERIOD_UNIT_MONTH}"/>
                                            <core:Item key="1" text="{i18n>PERIOD_UNIT_WEEK}"/>
                                        </items>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>START_DATE}">
                                <f:fields>
                                    <DatePicker displayFormat="dd/MM/yyyy"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>NOTE}">
                                <f:fields>
                                    <TextArea/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <content>
                    <Button text="{i18n>BTN_SUBMIT}" type="Accept"/>
                    <Button text="{i18n>BTN_CANCEL}"/>
                </content>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>